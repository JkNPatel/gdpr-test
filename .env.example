# GDPR Deletion Service - Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
# Full connection string format: postgres://user:password@host:port/database?sslmode=disable
DB_URL=postgres://gdpr_test_user:test_password@localhost:5432/product_b_test?sslmode=disable

# Amplitude Configuration
AMPLITUDE_KEY=your_amplitude_api_key_here

# Job Configuration
IDS_JSON=ids.json                           # Path to JSON file with user IDs
SQL_PATH=sql/gdpr-deletion.sql              # Path to SQL deletion script
REQUESTED_BY=local-test                      # Who requested the deletion
REQUEST_ID=                                  # Optional: UUID for tracking (auto-generated if empty)
DRY_RUN=true                                 # Set to 'false' for actual deletion

# Performance Tuning (Optional)
DB_CHUNK_SIZE=                               # Users per DB transaction (leave empty for no chunking)
DB_STMT_TIMEOUT_MS=300000                    # Database statement timeout (5 minutes)
AMP_BATCH_SIZE=300                           # Amplitude batch size
AMP_CONCURRENCY=4                            # Concurrent Amplitude API requests
AMP_MAX_ATTEMPTS=5                           # Max retry attempts for Amplitude

# Environment
NODE_ENV=development
