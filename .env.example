# Server Configuration
NODE_ENV=development
PORT=3000

# Authentication
API_KEYS=your-secret-api-key-1,your-secret-api-key-2
ALLOWED_IPS=127.0.0.1,10.0.0.0/8

# Rate Limiting (per API key or IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Product B Database
PRODUCT_B_DB_HOST=localhost
PRODUCT_B_DB_PORT=5432
PRODUCT_B_DB_NAME=product_b
PRODUCT_B_DB_USER=gdpr_deletion_user
PRODUCT_B_DB_PASSWORD=your-secure-password
PRODUCT_B_DB_SSL=true
PRODUCT_B_DB_MAX_CONNECTIONS=10

# Amplitude API (optional)
AMPLITUDE_API_KEY=your-amplitude-api-key
AMPLITUDE_SECRET_KEY=your-amplitude-secret-key
AMPLITUDE_RATE_LIMIT_PER_SECOND=5

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Worker Configuration
MAX_RETRIES=3
